<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Information3">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/search_data"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="180dp"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="34sp"
            android:text="Anonymous data is used to improve I Care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Your data is used to improve iCare."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"
            android:text="We review I Care's conversations (without looking at your name or email) to improve I Care's functionality and help ensure that I Care is effective."/>

        <Button
            android:id="@+id/information3AcceptBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:backgroundTint="#2894FF"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:text="I understand and accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>